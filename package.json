{
  "name": "conun-manager",
  "productName": "Conun Manager",
  "version": "1.0.0-beta",
  "description": "Conun Manager",
  "homepage": "./",
  "main": "dist/electron/index.js",
  "scripts": {
    "start": "parcel src/index.html --out-dir parcel-dist",
    "build": "parcel build src/index.html --out-dir dist/parcel-build --public-url ./",
    "dev": "concurrently -k \"yarn start\" \"yarn:electron\"",
    "copy-assets": "copyfiles -f \"electron/assets/**/*\" \"dist/assets\"",
    "electron": "wait-on tcp:1234 && tsc && yarn copy-assets && electron .",
    "make": "yarn build && tsc && yarn copy-assets && electron-builder",
    "release": "yarn build && tsc && yarn copy-assets && electron-builder --publish=always",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [
    "conun",
    "ethereum",
    "wallet"
  ],
  "author": {
    "name": "Conun",
    "email": "ivan@conun.co.kr"
  },
  "repository": "https://github.com/CONUN-Global/conun-main-dapplication",
  "license": "MIT",
  "copyright": "Copyright 2020 by CONUN GROUP",
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "./out"
    },
    "appId": "conun.manager.app",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "certificateFile": "private/conun.io.certificate.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": "false",
      "publisherName": "conun.io.certificate"
    },
    "linux": {
      "category": "Utility",
      "target": "deb"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@types/classnames": "^2.2.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/pouchdb": "^6.4.0",
    "@types/qrcode": "^1.4.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/websocket": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "autoprefixer": "9.8.6",
    "concurrently": "^6.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-react": "^7.22.0",
    "parcel-bundler": "1.12.3",
    "postcss-modules": "3.2.2",
    "sass": "^1.32.8",
    "typescript": "^4.0.2",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "@svgr/parcel-plugin-svgr": "^5.5.0",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.19.0",
    "electron-fetch": "^1.7.3",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.8",
    "ethereumjs-tx": "^2.1.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^4.1.2",
    "jimp": "^0.16.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "keytar": "^7.4.0",
    "pouchdb": "^7.2.2",
    "pure-react-carousel": "^1.27.6",
    "qrcode": "^1.4.4",
    "qrcode-reader": "^1.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.3.1",
    "react-hook-form": "^6.15.4",
    "react-modal": "^3.12.1",
    "react-outside-click-handler": "^1.3.0",
    "react-query": "^3.12.0",
    "react-router-dom": "^5.2.0",
    "react-switch": "^6.0.0",
    "react-toastify": "^7.0.3",
    "react-tooltip": "^4.2.17",
    "web3": "^1.3.4",
    "websocket": "^1.0.34",
    "winston": "^3.3.3"
  }
}
